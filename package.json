		"test:watch": "jest --watch"
	},
	"keywords": [
		"mcp",
		"image-optimization",
		"webp",
		"image-processing",
		"web-performance",
		"batch-processing",
		"image-enhancement",
		"noise-reduction",
		"jpeg-artifacts",
		"4k-resolution"
	],
